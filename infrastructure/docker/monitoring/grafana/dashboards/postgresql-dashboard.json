{
  "title": "PostgreSQL Database Metrics",
  "tags": [
    "postgres",
    "database"
  ],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Database Connections",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Connections"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 2,
      "title": "Transactions Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[5m])",
          "legendFormat": "Commits - {{datname}}",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback[5m])",
          "legendFormat": "Rollbacks - {{datname}}",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Transactions/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 3,
      "title": "Query Performance",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_fetched[5m])",
          "legendFormat": "Tuples Fetched - {{datname}}",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_tup_returned[5m])",
          "legendFormat": "Tuples Returned - {{datname}}",
          "refId": "B"
        },
        {
          "expr": "rate(pg_stat_database_tup_inserted[5m])",
          "legendFormat": "Tuples Inserted - {{datname}}",
          "refId": "C"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated[5m])",
          "legendFormat": "Tuples Updated - {{datname}}",
          "refId": "D"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted[5m])",
          "legendFormat": "Tuples Deleted - {{datname}}",
          "refId": "E"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Tuples/sec"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 4,
      "title": "Database Size",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "pg_database_size_bytes",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Size"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 5,
      "title": "Cache Hit Ratio",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_blks_hit[5m])) / (sum(rate(pg_stat_database_blks_hit[5m])) + sum(rate(pg_stat_database_blks_read[5m]))) * 100",
          "legendFormat": "Cache Hit Ratio",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Hit Ratio"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 6,
      "title": "Dead Tuples",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "pg_stat_user_tables_n_dead_tup",
          "legendFormat": "{{schemaname}}.{{relname}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Dead Tuples"
        },
        {
          "format": "short"
        }
      ],
      "xaxis": {
        "mode": "time"
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    }
  ],
  "id": null,
  "uid": "postgresql-dashboard",
  "editable": true
}
